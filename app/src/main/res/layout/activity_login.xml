<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        app:layout_constraintTop_toBottomOf="@+id/et_pass_word"
        android:layout_marginTop="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/login_bg_bottom"
        android:layout_width="0dp"
        android:scaleType="centerInside"
        app:layout_constraintDimensionRatio="1:1.3"
        android:layout_height="0dp"/>
    <Button
        android:id="@+id/btn_login"
        style="@style/Button"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:text="@string/login_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pass_word" />

    <EditText
        android:id="@+id/et_user"
        android:inputType="textEmailAddress"
        style="@style/edittext_input_1"
        android:hint="@string/login_8"
        android:layout_width="0dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/iv_top_2" />

    <EditText
        android:id="@+id/et_pass_word"
        style="@style/edittext_input_1"
        android:hint="@string/login_9"
        android:layout_width="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/cb_show"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_top_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_top_2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="210dp"
        android:scaleType="centerCrop"
        android:background="@drawable/login_top_2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/login_user"
        app:layout_constraintBottom_toBottomOf="@+id/et_user"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/login_pass_word"
        app:layout_constraintBottom_toBottomOf="@+id/et_pass_word"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/cb_show"
        android:button="@drawable/sel_pass_show"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="40dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/et_pass_word"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/login_4"
        android:textColor="@color/white1"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_user"
        app:layout_constraintStart_toEndOf="@+id/iv_1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/login_5"
        android:textColor="@color/white1"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_pass_word"
        app:layout_constraintStart_toEndOf="@+id/iv_2" />

    <View
        android:id="@+id/line1"
        style="@style/Line"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user" />

    <View
        android:id="@+id/line2"
        style="@style/Line"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pass_word" />

    <TextView
        android:id="@+id/tv_phone"
        android:textSize="13sp"
        android:textColor="@color/white1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>